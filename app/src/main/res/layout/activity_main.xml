<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freeteam01.androidnewsgroupreader.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <Spinner
        android:id="@+id/subscribed_newsgroups"
        android:layout_width="0dp"
        android:layout_height="33dp"
        app:layout_constraintLeft_toLeftOf="@+id/my_toolbar"
        app:layout_constraintRight_toRightOf="@+id/my_toolbar"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ListView
        android:id="@+id/tree_view"
        android:layout_width="0dp"
        android:layout_height="462dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/subscribed_newsgroups"
        app:layout_constraintRight_toRightOf="@+id/subscribed_newsgroups"
        app:layout_constraintTop_toBottomOf="@+id/subscribed_newsgroups" />


</android.support.constraint.ConstraintLayout>
